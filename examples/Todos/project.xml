<?xml version="1.0" encoding="utf-8"?>
<project>
    
    <set name="openfl-next" value="1" />
	
	<meta title="Todos" package="feathers.examples" version="1.0.0" />
	<app main="Todos" file="Todos" path="bin" />
    
    <window width="960" height="640" />
	<source path="source" />
    <source path="../../themes/MetalWorksMobileTheme/source" />
    
    <assets path="../../themes/MetalWorksMobileTheme/assets/images/metalworks_mobile.xml" rename="assets/images/metalworks_mobile.xml" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/images/metalworks_mobile.png" rename="assets/images/metalworks_mobile.png" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Regular.ttf" rename="assets/fonts/SourceSansPro-Regular.ttf" if="native" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Semibold.ttf" rename="assets/fonts/SourceSansPro-Semibold.ttf" if="native" />
	<assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Regular.ttf" rename="assets/fonts/SourceSansPro-Regular.ttf" if="html5" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Semibold.ttf" rename="assets/fonts/SourceSansPro-Semibold.ttf" if="html5" />
	
	<haxelib name="openfl" />
    <haxelib name="starling" />
    <haxelib name="feathers" />
    
    <haxedef name="source-map-content" if="html5 || nodejs" />
	<haxedef name="dom" if="html5" />
	<haxedef name="webgl" if="html5" />
    
    <haxedef name="disable_gl_renderer" />
    
    <haxeflag name="-swf-version" value="11.4" if="flash" />
	
</project>
