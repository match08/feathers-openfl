<?xml version="1.0" encoding="utf-8"?>
<project>
    
    <set name="openfl-next" value="1" />
	
	<meta title="DisplayObjectExplorer" package="feathers.examples" version="1.0.0" />
	<app main="DisplayObjectExplorer" file="DisplayObjectExplorer" path="bin" />
    
    <window width="960" height="640" />
	<source path="source" />
    <source path="../../themes/MetalWorksMobileTheme/source" />
    
    <assets path="../../themes/MetalWorksMobileTheme/assets/images/metalworks_mobile.xml" rename="assets/images/metalworks_mobile.xml" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/images/metalworks_mobile.png" rename="assets/images/metalworks_mobile.png" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Regular.ttf" rename="assets/fonts/SourceSansPro-Regular.ttf" />
    <assets path="../../themes/MetalWorksMobileTheme/assets/fonts/SourceSansPro-Semibold.ttf" rename="assets/fonts/SourceSansPro-Semibold.ttf" />
	
	<assets path="assets/images/horizontal-grip.png" />
	<assets path="assets/images/scale3.png" />
	<assets path="assets/images/scale9.png" />
	<assets path="assets/images/tile-pattern.png" />
	<assets path="assets/images/vertical-grip.png" />
	
	<haxelib name="openfl" />
    <haxelib name="starling" />
    <haxelib name="feathers" />
    
    <haxedef name="source-map-content" if="html5 || nodejs" />
	<haxedef name="dom" if="html5" />
	<haxedef name="webgl" if="html5" />
    
    <haxedef name="disable_gl_renderer" />
	
</project>
